{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@hd-ui/*",
    "packages/hd-ui",
    "packages/hd-ui-react",
    "packages/docs"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:docs": "yarn workspace docs build",
    "build:file": "yarn workspace hd-ui build:file",
    "build:hd-ui-react": "yarn workspace hd-ui-react build",
    "build:theme": "yarn workspace hd-ui build:theme",
    "build:utils": "yarn workspace hd-ui build:utils",
    "clean:hd-ui": "yarn workspace hd-ui clean",
    "codecov": "codecov",
    "compile": "yarn workspace hd-ui-react compile",
    "dev:docs": "yarn workspace docs dev",
    "dist:hd-ui": "yarn workspace hd-ui dist",
    "dist:hd-ui-react": "yarn workspace hd-ui-react dist",
    "examples:build": "yarn workspace hd-ui examples:build",
    "examples:dist": "yarn examples:install && yarn examples:build && node ./scripts/examples.js",
    "examples:install": "yarn workspace hd-ui examples:install",
    "link:hd-ui": "yarn workspace hd-ui link",
    "link:hd-ui-react": "yarn workspace hd-ui-react link",
    "precommit": "lint-staged",
    "pub": "lerna publish from-git",
    "release": "node scripts/release.js",
    "test": "jest",
    "unlink:hd-ui": "yarn workspace hd-ui unlink",
    "unlink:hd-ui-react": "yarn workspace hd-ui-react unlink"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "packages/**/!(lib|examples)/**/*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "codecov": "3.6.1",
    "eslint": "6.7.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-import-resolver-lerna": "1.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-vue": "6.0.1",
    "fs-extra": "8.1.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lerna": "3.16.4",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "sort-package-json": "1.36.0",
    "ts-jest": "24.3.0",
    "typescript": "3.7.4",
    "vue-eslint-parser": "7.0.0",
    "vue-jest": "3.0.5"
  }
}
